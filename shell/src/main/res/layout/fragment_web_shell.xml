<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#00000000"
              android:orientation="vertical"
    >


    <LinearLayout
        android:id="@+id/container"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:weightSum="10"
        >

        <LinearLayout
            android:id="@+id/empty_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:background="#55000000"
            android:orientation="horizontal"/>

        <LinearLayout
            android:id="@+id/center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:id="@+id/empty_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="#55000000"
                android:orientation="horizontal"/>

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/refreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srlEnableAutoLoadmore="false"
                app:srlEnableLoadmore="false"
                app:srlEnableLoadmoreWhenContentNotFull="false"
                app:srlEnableOverScrollDrag="false"
                app:srlEnableRefresh="false"
                >

                <com.tencent.smtt.sdk.WebView
                    android:id="@+id/wv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            </com.scwang.smartrefresh.layout.SmartRefreshLayout>

            <LinearLayout
                android:id="@+id/empty_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="#55000000"
                android:orientation="horizontal"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/empty_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:background="#55000000"
            android:orientation="horizontal"/>

    </LinearLayout>

    <!--<com.github.mmin18.widget.RealtimeBlurView-->
        <!--android:id="@+id/blurview"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="?attr/actionBarSize"-->
        <!--app:realtimeBlurRadius="10dp"-->
        <!--app:realtimeOverlayColor="@color/colorPrimary"/>-->

    <android.support.v7.widget.Toolbar
        style="@style/AppTheme.Toolbar"
        android:id="@+id/toolbar"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay"
        app:titleTextAppearance="@style/Toolbar_TextAppearance_White">

        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="15dp"
            android:layout_gravity="left"
            android:clickable="true"
            android:scaleType="fitStart"
            android:src="@drawable/backicon"
            android:tint="@color/black"
            android:visibility="gone"
            />
        <LinearLayout
            android:id="@+id/leftBar"
            android:layout_gravity="left"
            android:gravity="left"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="19sp"/>

            <ImageView
                android:id="@+id/center_image"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:scaleType="fitXY"
                />

            <android.support.design.widget.TabLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/tab"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center"
                android:visibility="gone"
                android:textSize="13sp"
                app:tabIndicatorColor="#4a90e2"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="#aaa0e2"
                app:tabTextColor="#6a6a6a"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rightBar"
            android:layout_gravity="right|center_vertical"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:layout_width="100dp"
            android:layout_height="wrap_content">
        </LinearLayout>

    </android.support.v7.widget.Toolbar>



    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</RelativeLayout>
